<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AepApp.View.Gridding.AssignPersonPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Grid>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="AssignPerson" NumberOfTapsRequired="1" />
                    </Grid.GestureRecognizers>
                    <Label Text="部门" Font="18" VerticalOptions="Center" Margin="10,10,10,10" HorizontalOptions="Start" />
                    <Label Text="监察中队" Font="16" TextColor="Gray" VerticalOptions="Center" HorizontalOptions="End" Margin="100,10,25,10" />
                    <Image Margin="10" Source="right" HeightRequest="20" WidthRequest="10" VerticalOptions="Center" HorizontalOptions="End" />
                </Grid>
                <Grid>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="AssignPerson" NumberOfTapsRequired="1" />
                    </Grid.GestureRecognizers>
                    <Label Text="子部门" Font="18" VerticalOptions="Center" Margin="10,10,10,10" HorizontalOptions="Start" />
                    <Label Text="一中队" Font="16" TextColor="Gray" VerticalOptions="Center" HorizontalOptions="End" Margin="100,10,25,10" />
                    <Image Margin="10" Source="right" HeightRequest="20" WidthRequest="10" VerticalOptions="Center" HorizontalOptions="End" />
                </Grid>
                <Grid>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="AssignPerson" NumberOfTapsRequired="1" />
                    </Grid.GestureRecognizers>
                    <Label Text="人员" Font="18" VerticalOptions="Center" Margin="10,10,10,10" HorizontalOptions="Start" />
                    <Label Text="李四" Font="16" TextColor="Gray" VerticalOptions="Center" HorizontalOptions="End" Margin="100,10,25,10" />
                    <Image Margin="10" Source="right" HeightRequest="20" WidthRequest="10" VerticalOptions="Center" HorizontalOptions="End" />
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>