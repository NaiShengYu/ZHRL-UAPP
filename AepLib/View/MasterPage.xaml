<!--                                                  Text="厂界VOC"-->
                        <Label Text="{Binding menuChangjieLabel}" />
                    </Grid>
                     <Grid StyleClass="menuitem" IsVisible="false">
                        <Grid.Triggers>
                            <DataTrigger TargetType="Grid" Binding="{Binding menuPaikou}" Value="true">
                                <Setter Property="IsVisible" Value="true">
                                </Setter>
                            </DataTrigger>
                        </Grid.Triggers>
