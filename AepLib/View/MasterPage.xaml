                        <!--                                                  水质量-->
                        <Label Text="{Binding menuWaterLabel}" />
                    </Grid>
                      <Grid StyleClass="menuitem" IsVisible="false">
                        <Grid.Triggers>
                            <DataTrigger TargetType="Grid" Binding="{Binding menuNoise}" Value="true">
                                <Setter Property="IsVisible" Value="true">
